{
    "Name": "HDG-Mixed-Poisson coupled with an OpenModelica circuit model",
    "ShortName":"MP_LC",
    "Models": { "equations":"hdg"},
    "Materials":
    {
        "omega":
        {
            "name":"simulation_domain",
            "poisson_c":"1",
            "poisson_f":"-6*x-12*y:x:y:t"
        }
    },
    "BoundaryConditions":
    {
        "potential":
        {
            "Dirichlet":
            {
                "bc":
				{
                    "markers":["bottom"],
					"expr":"x*x*x+2*y*y*y:x:y:t"
				}
            },
            "Neumann":
            {
                "bc":
                {
                    "markers":["top","lateral"],
                    "expr":"-3*x*x*nx-6*y*y*ny:x:y:nx:ny"
                }
            }
        }
    },
    "PostProcess":
    {
		"Exports":
		{
        	"fields":["potential","flux"]
		},
        "Measures":
        {
            "Norm":
            {
                "potential_error":
                {
                    "type":"L2-error",
                    "field":"potential",
                    "solution":"x*x*x+2*y*y*y:x:y:t",
                    "markers":"omega"
                },
                "flux_error":
                {
                    "type":"L2-error",
                    "field":"flux",
                    "solution":"{-3*x*x,-6*y*y}:x:y:t",
                    "markers":"omega"
                }
            }
        },
        "Checkers":
        {
            "Measures":
            {
                "Norm_potential_error_L2-error":
                {
                    "value":0,
                    "tolerance":1e-8
                },
                "Norm_flux_error_L2-error":
                {
                    "value":0,
                    "tolerance":1e-8
                }
            }
        }
    }
}

