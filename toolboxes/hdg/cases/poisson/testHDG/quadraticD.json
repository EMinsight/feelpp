{
    "Name": "HDG-Mixed-Poisson coupled with an OpenModelica circuit model",
    "ShortName":"MP_LC",
    "Models": { "equations":"hdg"},
    "Materials":
    {
        "omega":
        {
            "name":"simulation_domain",
            "poisson_c":"1",
            "poisson_f":"-6:x:y:t"
        }
    },
    "BoundaryConditions":
    {
        "potential":
        {
            "Dirichlet":
            {
                "bc":
				{
                    "markers":["bottom","top","lateral"],
					"expr":"x*x+2*y*y:x:y:t"
				}
            }
        }
    },
    "PostProcess":
    {
        "poisson":{
		"Exports":
		{
        	"fields":["potential","flux"]
		},
        "Measures":
        {
            "Norm":
            {
                "potential_error":
                {
                    "type":"L2-error",
                    "field":"potential",
                    "solution":"x*x+2*y*y:x:y:t",
                    "markers":"omega"
                },
                "flux_error":
                {
                    "type":"L2-error",
                    "field":"flux",
                    "solution":"{-2*x,-4*y}:x:y:t",
                    "markers":"omega"
                }
            }
        },
        "Checkers":
        {
            "Measures":
            {
                "Norm_potential_error_L2-error":
                {
                    "value":0,
                    "tolerance":1e-8
                },
                "Norm_flux_error_L2-error":
                {
                    "value":0,
                    "tolerance":1e-8
                }
            }
        }
        }
    }
}

