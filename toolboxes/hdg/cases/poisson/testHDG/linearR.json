{
    "Name": "HDG-Mixed-Poisson coupled with an OpenModelica circuit model",
    "ShortName":"MP_LC",
    "Models": { "equations":"hdg"},
    "Materials":
    {
        "omega":
        {
            "name":"simulation_domain",
            "poisson_c":"1",
            "poisson_f":"0:x:y:t"
        }
    },
    "BoundaryConditions":
    {
        "potential":
        {
            "Robin":
            {
                "bc":
                {
                    "markers":["bottom","top","lateral"],
                    "expr1": "2",
                    "expr2": "2*(x+y)-nx-ny:x:y:nx:ny"
                }
            }
        }
    },
    "PostProcess":
    {
        "poisson":{
		"Exports":
		{
        	"fields":["potential","flux"]
		},
        "Measures":
        {
            "Norm":
            {
                "potential_error":
                {
                    "type":"L2-error",
                    "field":"potential",
                    "solution":"x+y:x:y:t",
                    "markers":"omega"
                },
                "flux_error":
                {
                    "type":"L2-error",
                    "field":"flux",
                    "solution":"{-1,-1}:x:t",
                    "markers":"omega"
                }
            }
        },
        "Checkers":
        {
            "Measures":
            {
                "Norm_potential_error_L2-error":
                {
                    "value":0,
                    "tolerance":1e-7
                },
                "Norm_flux_error_L2-error":
                {
                    "value":0,
                    "tolerance":1e-7
                }
            }
        }
        }
    }
}

